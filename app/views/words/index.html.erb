<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Список слов</h1>
</div>
<div class="container">
  <% if not @words.empty? %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Русский</th>
        <th scope="col">Английский</th>
        <th scope="col">Действия</th>
      </tr>
      </thead>
      <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.id %></td>
          <td><%= word.ru %></td>
          <td><%= word.en %></td>
          <td>
            <div>
              <%= link_to edit_word_path(word), :class => "btn btn-primary" do %>
                <i class="fa fa-pencil" aria-hidden="true"></i>
              <% end %>
              <%= link_to word_path(word), :class => "btn btn-danger", method: :delete do %>
                <i class="fa fa-trash" aria-hidden="true"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="col-12">
      <%= link_to 'Новое слово', new_word_path, :class => "btn btn-outline-primary float-right" %>
    </div>
  <% else %>
    <h4 class="text-center">Нет слов :)</h4>
    <br>
    <div class="col-12 text-center">
      <%= link_to 'Новое слово', new_word_path, :class => "btn btn-outline-primary align-self-center" %>
    </div>
  <% end %>
</div>